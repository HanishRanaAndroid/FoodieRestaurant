<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frame_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/creme_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim250dp"
            android:background="@color/foodie_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/edit_profile_back_color" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twentydp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/flChangeProfilePic"
                    android:layout_width="@dimen/dim120dp"
                    android:layout_height="@dimen/dim120dp"
                    android:layout_gravity="center">

                    <com.valle.resturantfoodieapp.utils.RoundRectCornerImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ivProfilePic"
                        android:layout_width="@dimen/dim100dp"
                        android:layout_height="@dimen/dim120dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dim2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/upload"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/thirtydp"
                        android:layout_height="@dimen/thirtydp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/fivedp"
                        android:scaleType="fitXY"
                        android:src="@drawable/camera" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRestName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/tendp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteensp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyfivedp"
                android:layout_marginRight="@dimen/twentyfivedp"
                android:layout_marginBottom="@dimen/fiftydp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/tendp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirtydp"
                    android:layout_marginTop="@dimen/tendp"
                    android:text="@string/restaurant_name"
                    android:textColor="@color/foodie_color"
                    android:textSize="@dimen/sixteensp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirtydp"
                    android:layout_marginTop="@dimen/tendp"
                    android:layout_marginRight="@dimen/thirtydp"
                    android:background="@drawable/rectangular_with_black_borger"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/thirtydp"
                        android:layout_height="@dimen/thirtydp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/user" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etUpRestaurantName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fortydp"
                        android:layout_marginLeft="@dimen/tendp"
                        android:background="@null"
                        android:shadowColor="@color/shadow_color"
                        android:textColor="@color/light_black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dim14sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirtydp"
                    android:layout_marginTop="@dimen/twentydp"
                    android:text="@string/email_id"
                    android:textColor="@color/foodie_color"
                    android:textSize="@dimen/sixteensp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirtydp"
                    android:layout_marginTop="@dimen/tendp"
                    android:layout_marginRight="@dimen/thirtydp"
                    android:background="@drawable/rectangular_with_black_borger"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/thirtydp"
                        android:layout_height="@dimen/thirtydp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/mail" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etUpRestaurantEmailId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fortydp"
                        android:layout_marginLeft="@dimen/tendp"
                        android:background="@null"
                        android:shadowColor="@color/shadow_color"
                        android:textColor="@color/light_black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dim14sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirtydp"
                    android:layout_marginTop="@dimen/twentydp"
                    android:text="@string/mobile_number"
                    android:textColor="@color/foodie_color"
                    android:textSize="@dimen/sixteensp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirtydp"
                    android:layout_marginTop="@dimen/tendp"
                    android:layout_marginRight="@dimen/thirtydp"
                    android:background="@drawable/rectangular_with_black_borger"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/thirtydp"
                        android:layout_height="@dimen/thirtydp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/phone_number" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etUpMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fortydp"
                        android:layout_marginLeft="@dimen/tendp"
                        android:background="@null"
                        android:shadowColor="@color/shadow_color"
                        android:textColor="@color/light_black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dim14sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirtydp"
                    android:layout_marginTop="@dimen/twentydp"
                    android:text="@string/address"
                    android:textColor="@color/foodie_color"
                    android:textSize="@dimen/sixteensp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirtydp"
                    android:layout_marginTop="@dimen/tendp"
                    android:layout_marginRight="@dimen/thirtydp"
                    android:background="@drawable/rectangular_with_black_borger"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/thirtydp"
                        android:layout_height="@dimen/thirtydp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/location" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etUpAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fortydp"
                        android:layout_marginLeft="@dimen/tendp"
                        android:background="@null"
                        android:shadowColor="@color/shadow_color"
                        android:textColor="@color/light_black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dim14sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirtydp"
                    android:layout_marginTop="@dimen/twentydp"
                    android:orientation="horizontal">

                    <com.valle.resturantfoodieapp.utils.RoundRectCornerImageView
                        android:id="@+id/ivCoverImage"
                        android:layout_width="@dimen/dim100dp"
                        android:layout_height="@dimen/dim100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUploadImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/tendp"
                        android:gravity="center"
                        android:text="@string/upload_cover_image"
                        android:textColor="@color/foodie_color"
                        android:textSize="@dimen/dim14sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUpdateProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/signup_button"
                    android:layout_marginLeft="@dimen/thirtydp"
                    android:layout_marginTop="@dimen/twentydp"
                    android:layout_marginRight="@dimen/thirtydp"
                    android:layout_marginBottom="@dimen/twentydp"
                    android:background="@drawable/btn_red_back"
                    android:gravity="center"
                    android:padding="@dimen/tendp"
                    android:text="@string/update_profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteensp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</FrameLayout>