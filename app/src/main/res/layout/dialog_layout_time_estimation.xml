<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/tendp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/tendp"
        android:text="@string/select_time_estimation_for_n_order_number_35_n_preparation"
        android:textColor="@color/foodie_color"
        android:textSize="@dimen/sixteensp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimeEstimation"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/tendp" />

    <Button
        android:id="@+id/btConfirm"
        android:layout_width="@dimen/dim120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/tendp"
        android:background="@color/foodie_color"
        android:text="@string/confirm"
        android:textColor="@color/white" />
</androidx.appcompat.widget.LinearLayoutCompat>